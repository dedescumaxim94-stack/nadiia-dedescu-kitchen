<main class="category-page">
  <section class="category-banner" aria-label="Category intro">
    <p class="eyebrow">Recipe Collection</p>
    <h2><%= title %></h2>
    <p>Explore published recipes in this category.</p>
  </section>

  <section class="home-section" aria-label="Category recipes">
    <% if (recipes && recipes.length) { %>
      <div class="recipe-grid">
        <% recipes.forEach(function(recipe) { %>
          <%- include('../partials/recipe-card', { recipe: recipe }) %>
        <% }); %>
      </div>
    <% } else { %>
      <p class="empty-state">No recipes yet. Check back soon.</p>
    <% } %>
  </section>
</main>
